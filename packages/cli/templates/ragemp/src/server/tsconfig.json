{
	"compilerOptions": {
		"target": "es2020",
		"module": "commonjs",
		"strict": true,
		"rootDir": "src",
		"outDir": "build",
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"typeRoots": [
			"node_modules/@types",
			"node_modules/@ragempcommunity/types-server"
		],
		"types": [
			"@ragempcommunity/types-server"
		]
	},
	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"build"
	]
}