{
	"compilerOptions": {
		"baseUrl": ".",
		"target": "esnext",
		"module": "CommonJS",
		"types": [
			"jest"
		],
		"moduleResolution": "Node",
		"paths": {
			"@client/*": [
				"packages/client/src/*"
			],
			"@core/*": [
				"packages/core/src/*"
			],
			"@server/*": [
				"packages/server/src/*"
			],
			"@webview/*": [
				"packages/webview/src/*"
			]
		},
		"esModuleInterop": true,
		"experimentalDecorators": true,
		"emitDecoratorMetadata": true,
	},
	"include": [
		"packages/client/src/**/*",
		"packages/core/src/**/*",
		"packages/server/src/**/*",
		"packages/webview/src/**/*",
	]
}